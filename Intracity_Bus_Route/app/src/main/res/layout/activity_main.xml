<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.intracity_bus_route.MainActivity"
    android:background="@drawable/bck2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentLeft="true"
                android:text="@string/select_source"
                android:id="@+id/source"
                android:textColor="@color/lightblue"/>

            <Spinner
                android:id="@+id/dropdown1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/source"
                android:background="@drawable/source" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/select_destination"
                android:id="@+id/destination"
                android:layout_below="@+id/source"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="70dp"
                android:textColor="@color/lightblue"/>

            <Spinner
                android:id="@+id/dropdown2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="103dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/destination"
                android:background="@drawable/dest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/select_option"
                android:id="@+id/option"
                android:layout_below="@+id/destination"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="70dp"
                android:textColor="@color/lightblue"/>

            <Spinner
                android:id="@+id/dropdown3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/option"
                android:background="@drawable/op" />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text=""
                android:id="@+id/button"
                android:layout_below="@+id/dropdown3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/fr1"/>


        </RelativeLayout>

    </ScrollView>

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text=""
        android:id="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/mapbtn"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text=""
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/gmap"/>

TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Result"
    android:id="@+id/resulttxt"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true

android:spinnerMode="dropdown"
</RelativeLayout>
