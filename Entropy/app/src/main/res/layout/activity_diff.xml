<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thenewboston.entropy.DiffActivity"
    android:background="@drawable/b1">

    <Button
        android:id="@+id/difbutton1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="@string/dr_example1"
        android:background="@drawable/green"
        android:textSize="18dp"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/difbutton2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/difbutton2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="@string/dir_example1"
        android:background="@drawable/red"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/difbutton1"
        android:layout_alignStart="@+id/difbutton1" />


</RelativeLayout>
